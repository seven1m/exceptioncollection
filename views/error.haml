%h2=h @error.message
%table{:class => 'error'}
  %tr
    %th Application
    %td
      %a{:href => "/apps/#{@error.application_id}"}=h @error.application.name
  %tr
    %th Active
    %td=h @error.active ? 'yes' : 'no'
  %tr
    %th When
    %td=h @error.created_at.strftime('%m/%d/%Y %I:%M %p')
  %tr
    %th Backtrace
    %td
      %pre=h @error.backtrace
  %tr
    %th Rails Root
    %td=h @error.rails_root
  %tr
    %th URL
    %td=h @error.url
  %tr
    %th Host
    %td=h @error.host
  %tr
    %th IP
    %td=h @error.ip
  %tr
    %th Parameters
    %td=h @error.parameters
  %tr
    %th Process
    %td=h @error.process
%form{:method => 'POST'}
  %input{:type => 'hidden', :name => '_method', :value => 'PUT'}
  %input{:type => 'submit', :name => 'active', :value => @error.active ? 'Make Inactive' : 'Make Active'}
